// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(VIEWER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ideias    Ideia[]
}

enum Role {
  ADMIN
  EDITOR
  VIEWER
}

model Ideia {
  id          String   @id @default(uuid())
  titulo      String
  descricao   String
  autor       User     @relation(fields: [autorId], references: [id])
  autorId     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model VM {
  id        String   @id @default(uuid())
  nome      String
  status    String
  cpu       String
  ram       String
  cmdbId    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Ativo {
  id        String   @id @default(uuid())
  codigo    String   @unique
  nome      String
  tipo      String
  status    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}